<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentSignUpActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentSignUpActivity">

    <EditText
        android:id="@+id/studentName"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="70dp" />

    <EditText
        android:id="@+id/studentRollno"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/studentName"
        android:layout_margin="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Roll no"
        android:inputType="number"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="162dp" />

    <EditText
        android:id="@+id/studentPhno"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/studentRollno"
        android:layout_margin="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Phone no"
        android:inputType="number"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="251dp" />

    <EditText
        android:id="@+id/studentRoom"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/studentPhno"
        android:layout_margin="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Room"
        android:inputType="number"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="328dp" />

    <EditText
        android:id="@+id/studentHostel"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/studentRoom"
        android:layout_margin="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Hostel "
        android:inputType="number"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="405dp" />

    <EditText
        android:id="@+id/studentEmail"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/studentHostel"
        android:layout_margin="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Email "
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="505dp" />

    <Button
        android:id="@+id/studentSignUp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/studentEmail"
        android:layout_marginStart="15dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:onClick="send"
        android:text="SIGN UP"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="607dp" />

    <EditText
        android:id="@+id/studentPassword"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentEmail"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

</RelativeLayout>

</ScrollView>